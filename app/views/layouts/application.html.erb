<!DOCTYPE html>
<html>
<head>
  <title>Fauxtoh</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <% if current_user %>
    <%= image_tag current_user.avatar.url(:thumb) %> Logged in as <%= link_to current_user.email, user_path(current_user.id) %>
    <%= link_to "Log Out", logout_path %>
  <% else %>
    <%= link_to "Sign Up", signup_path %> or
    <%= link_to "Log In", login_path %>
  <% end %>
  <div class="container">
    <%= flash[:notice] %>
    <%= yield %>
  </div>
</body>
</html>
